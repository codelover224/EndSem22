<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="200dp" />
            <stroke android:width="1dip" android:color="#0F0" />
            <gradient android:angle="-90" android:startColor="#0F0" android:endColor="#FFF"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="200dp" />
            <stroke android:width="1dip" android:color="#000" />
            <solid android:color="#fff"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="200dp" />
            <stroke android:width="1dip" android:color="#000" />
            <gradient android:angle="-90" android:startColor="@color/red" android:endColor="#FFF" />
        </shape>
    </item>
</selector>