<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/my_bg_anim"
    tools:context=".Login_Activity">


    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="50dp"
        android:orientation="vertical">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="125dp"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/sos" />
        <!--android:translationZ="10dp"-->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Welcome to SOS"
            android:textColor="#000"
            android:textSize="35sp" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll1"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_mobno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Mobile No."
            android:textColor="#000"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/et_mobno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:layout_toRightOf="@id/tv_mobno"
            android:background="@drawable/rounded_button_blue"
            android:inputType="number"
            android:minHeight="50dp"
            android:textColor="#000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_mobno"
            android:layout_marginTop="30dp"
            android:text="Name"
            android:textColor="#000"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="10dp"
            android:layout_below="@id/et_mobno"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/tv_mobno"
            android:background="@drawable/rounded_button_blue"
            android:textColor="#000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_vehno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_name"
            android:layout_marginTop="30dp"
            android:text="Vehicle No."
            android:textColor="#000"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/et_vehno"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="10dp"
            android:layout_below="@id/et_name"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/tv_mobno"
            android:background="@drawable/rounded_button_blue"
            android:inputType="textCapCharacters"
            android:textColor="#000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_vehno"
            android:layout_marginTop="30dp"
            android:text="Type"
            android:textColor="#000"
            android:textSize="20sp" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_below="@id/et_vehno"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/tv_mobno"
            android:background="@drawable/rounded_button_blue"
            android:gravity="center_horizontal" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/btn_done"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_button_blue"
                android:text="LOGIN"
                android:textColor="#f00"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>